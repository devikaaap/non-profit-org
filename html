        <h2>Events</h2>
        <div id="event-list">
            <!-- JavaScript will populate events here -->
        </div>
    </section>

    <!-- JavaScript to Fetch Events -->
    <script>
        // Fetch events from API or hardcoded array
        const events = [
            { name: "Clothes Distribution", date: "2024-03-20", location: "Madhapur" },
            { name: "Food Distribution", date: "2024-04-05", location: "Gachibowli" },
            { name: "Animal Adoption", date: "2024-04-15", location: "Jubilee hills" }
        ];

        const eventList = document.getElementById('event-list');

        events.forEach(event => {
            const eventItem = document.createElement('div');
            eventItem.classList.add('event');
            eventItem.innerHTML = `
                <h3>${event.name}</h3>
                <p><strong>Date:</strong> ${event.date}</p>
                <p><strong>Location:</strong> ${event.location}</p>
            `;
            eventList.appendChild(eventItem);
        });
    </script>
